  <nav>
    <ul>
      <li onclick="changeCategory('fashion')">Fashion</li>
      <li onclick="changeCategory('nature')">Nature</li>
      <li onclick="changeCategory('portraits')">Portraits</li>
      <li onclick="changeCategory('street')">Street</li>
      <li onclick="changeCategory('commercial')">Commercial</li>
    </ul>
  </nav>
